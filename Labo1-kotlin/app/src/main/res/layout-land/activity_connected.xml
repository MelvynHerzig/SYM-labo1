<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/app_horizontal_margin"
    android:layout_marginEnd="@dimen/app_horizontal_margin"
    android:layout_marginTop="@dimen/app_vertical_margin"
    android:layout_marginBottom="@dimen/app_vertical_margin"
    tools:context=".ConnectedActivity">

    <ImageView
        android:id="@+id/connected_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/connected_profile_picture_desc" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/connected_greetings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connected_greetings"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/connected_email_greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/connected_greetings_title"
            android:layout_marginTop="@dimen/app_vertical_separation"
            android:textAlignment="center" />

    </RelativeLayout>


</LinearLayout>